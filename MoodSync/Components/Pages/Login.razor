@page "/login"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@code {
    private string username = "";
    private string password = "";

    private void HandleLogin()
    {
        if (username == "testuser" && password == "password123")
        {
            JSRuntime.InvokeVoidAsync("localStorage.setItem", "isLoggedIn", "true");
            JSRuntime.InvokeVoidAsync("localStorage.setItem", "username", username);
            NavigationManager.NavigateTo("/");
        }
        else
        {
            JSRuntime.InvokeVoidAsync("alert", "Invalid credentials!");
        }
    }
}

<h3>Login</h3>
<div>
    <label for="username">Username:</label>
    <input @bind="username" type="text" placeholder="Enter username" />
</div>

<div>
    <label for="password">Password:</label>
    <input @bind="password" type="password" placeholder="Enter password" />
</div>

<button @onclick="HandleLogin">Log In</button>
